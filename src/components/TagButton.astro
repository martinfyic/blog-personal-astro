---
interface Props {
	url: string;
}

const { url } = Astro.props;
---
<a 
  href={ url } 
  class="font-light text-gray-500 text-sm lg:text-base dark:text-gray-400 cursor-pointer text-center transition-all duration-200 ease-in-out hover:text-white scale-90 gap-x-2 opacity-70 hover:opacity-100">
  #
  <slot />
</a>