---
import MainLayout from '../layouts/MainLayout.astro';
import BlogPost from '../components/BlogPost.astro';

const allPosts = await Astro.glob('../pages/posts/*.md');
const pageTitle = "Blog";

---

<MainLayout pageTitle={pageTitle}>
	<h1 class="mb-8 lg:mb-16 text-center text-5xl tracking-tight font-extrabold text-white">
		Mi blog 
	</h1>
	<h2 class="mb-8 lg:mb-16 text-center text-xl tracking-tight font-extrabold text-white">
		Aquí es donde publicaré sobre mi viaje de aprendizaje Astro.
	</h2>
	<section class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 py-8">
		{allPosts.map((post) => <BlogPost post={post} />)}
	</section>
</MainLayout>